unit FlashPanel;

interface

uses
  SysUtils, Classes, Controls, ExtCtrls, ShockwaveFlashObjects_TLB, OleCtrls;

type
  TFlashPanel = class(TPanel)
  private
    FMovie: TFileName;
    Flash: TShockwaveFlash;
    procedure SetMovie(value: TFileName);
  protected
    { Protected declarations }
  public
    constructor Create(AOwner: TComponent); override;
    destructor Destroy; override;
  published
    property Movie: TFileName read FMovie write SetMovie;
    property ShockwaveFlash: TShockwaveFlash read Flash write Flash;
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('Tech', [TFlashPanel]);
end;

destructor TFlashPanel.Destroy;
begin
  Flash.FreeOnRelease;
  inherited Destroy;
end;

constructor TFlashPanel.Create(AOwner: TComponent);
begin
  inherited Create(AOwner);
  Flash:= TShockwaveFlash.Create(self);
  Flash.Parent := self;
  Flash.Align := alClient;
  Flash.OnDblClick := OnDblClick;
  Flash.OnMouseDown := OnMouseDown;
  Flash.ControlStyle := [csCaptureMouse,
    csClickEvents, csDoubleClicks, csDisplayDragImage];
  Flash.ControlState := [csClicked,csLButtonDown,csFocusing];
end;

procedure TFlashPanel.SetMovie(value: TFileName);
begin
  FMovie := value;

end;

end.
